{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "declaration": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "server/*": ["src/server/*"],
      "client/*": ["src/client/*"],
      "hooks/*": ["src/hooks/*"],
      "router/*": ["src/router/*"],
      "pages/*": ["src/pages/*"],
      "config/*": ["src/config/*"],
      "style/*": ["src/style/*"],
      "utils/*": ["src/utils/*"],
      "store": ["src/store"],
      "i18n": ["src/i18n"],
      "store/*": ["src/store/*"],
      "types/*": ["src/types/*"],
      "template/*": ["src/template/*"],
      "components/*": ["src/components/*"],
      "webpackConfig/*": ["webpack/*"],
      "script/*": ["script/*"],
      "lang/*": ["lang/*"]
    }
  },
  "include": ["src"]
}
